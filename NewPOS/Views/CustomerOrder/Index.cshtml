
@{
    ViewBag.Title = "Index";

}
<link rel="stylesheet" href="https://code.jquery.com/ui/1.11.3/themes/ui-lightness/jquery-ui.css" />
<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />

<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
<link href="~/css/autocomplete.css" rel="stylesheet" />

<style type="text/css">
    #projects_table_wrapper {
        width: 100%;
    }

    table {
        width: 100%;
        border: 1px solid #ccc;
    }

        table td input {
            width: 100%;
        }

    .move {
        text-align: end;
    }
    #myInput{
        width: 100%;
    }
</style>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Customer Order</h6>
        <div id="message" class="m-0">

        </div>
    </div>
    <div class="card-body">

        <form id="form">
            <div class="row">


                <div class="col-md-4">
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="m-2">Customer </label>
                        <div class="autocomplete" style="width: 100%;">
                          
                            <input id="myInput" type="text" name="id" class="form-control" placeholder="Select Customer" required>
                        </div>

                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Payment Method</label>
                        <select class="custom-select" id="inputGroupSelect01" name="paymentMethod" required >
                            <option selected value="0">Method...</option>
                            <option value="Cash">Cash</option>
                            <option value="Terms">Terms</option>
                        </select>


                    </div>
                    <label for="exampleInputEmail1">Terms</label>
                    <div class="input-group mb-3" style="width: 200px;">

                        <input required  name="days" style="width: 100px;" id="terms" type="text" class="form-control" placeholder="Terms" aria-label="Terms" aria-describedby="basic-addon2" disabled>
                        <div class="input-group-append">
                            <span class="input-group-text" id="basic-addon2">Days</span>
                        </div>
                    </div>
                </div>


                <div class="col-md-4 offset-md-4">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Date</label>
                        <input name="date" type="date" class="form-control" id="datepicker" required >

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Reference No.</label>
                        <input type="email" name="referenceNo" class="form-control" id="referenceNo" aria-describedby="emailHelp" required >

                    </div>
                </div>


            </div>
        </form>
            <hr />
            <a id="addRow" class="btn btn-danger" style="margin-bottom: 15px; color: white; ">Add Product <i class="fas fa-plus"></i></a>
            <div class="row" style="overflow: auto">

                <table id="projects_table" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Item_Name</th>
                            <th>Description</th>
                            <th>Qty</th>
                            <th>UM</th>
                            <th>Price</th>
                            <th>Total Amount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>
                            <th colspan="5" style="text-align:right">Total:</th>
                            <th id="totalamount"></th>
                        </tr>
                    </tfoot>
                </table>

            </div>
      
        <div class="row" style="display:block; text-align:center">
            <button data-request-url="@Url.Action("InsertCustomerOrder","CustomerOrder")" type="button" id="btn-ser1" class="btn btn-primary">Submit</button>
        </div>

    </div>
  
</div>


@section scripts{
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <script src="~/js/customerAutoComplete.js"></script>
    <script type="text/javascript" src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="~/js/Customer/customerorder.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/xcash/bootstrap-autocomplete@v2.3.0/dist/latest/bootstrap-autocomplete.min.js"></script>
    <script type="text/javascript">
       


    </script>



}